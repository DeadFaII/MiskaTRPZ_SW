<!DOCTYPE html>
<html>
  <head>
    <title>Miska</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css",
                            "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <style>
      body {
        background-color: #000;
      }
      
      .navbar {
        background-color: #000;
      }
      
      .navbar-brand {
        color: #1db954;
        font-size: 24px;
      }
      
      .navbar-nav .nav-link {
        color: #fff;
        font-size: 16px;
      }
      
      .navbar-nav .nav-link:hover {
        color: #1db954;
      }
      
      .container {
        color: #fff;
      }
      
      h1, h2, h3, h4, h5, h6 {
        color: #fff;
      }
      
      a {
        color: #1db954;
      }
      
      a:hover {
        color: #1ed760;
      }
    </style>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/playlists">Playlist</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/musics">Music</a>
              </li>
              <li >
      <% if user_signed_in? %>
        <%= form_with(url: destroy_user_session_path, method: :delete, html: { class: "d-inline" }) do |f| %>
          <%= f.button "Log out (#{current_user.nickname})", class: "nav-link btn-link", style: "background: none; border: none; cursor: pointer; padding: 0; color: #b3b6ba" %>
        <% end %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "nav-link" , style:"color: #b3b6ba " %>
      <% end %>
    </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container mt-4">
      <%= yield %>
    </div>

    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js",
                               "data-turbo-track": "reload" %>
  </body>
</html>
